{% extends 'base.html.twig' %}

{% block title %}Projets{% endblock %}

{% block body %}
    <h1>Projets</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ projet.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ projet.titre }}</td>
            </tr>
            <tr>
                <th>Lien</th>
                <td>{{ projet.lien }}</td>
            </tr>
            <tr>
                <th>Images</th>
                <td>{{ projet.images ? projet.images|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ projet.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_projets_index') }}">back to list</a>

    <a href="{{ path('app_admin_projets_edit', {'id': projet.id}) }}">edit</a>

    {{ include('admin/projets/_delete_form.html.twig') }}
{% endblock %}
