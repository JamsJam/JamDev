{% extends 'base.html.twig' %}

{% block title %}Mail index{% endblock %}

{% block body %}
    <h1>Mail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th>Sujet</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mail in mails %}
            <tr>
                <td>{{ mail.id }}</td>
                <td>{{ mail.nom }}</td>
                <td>{{ mail.prenom }}</td>
                <td>{{ mail.mail }}</td>
                <td>{{ mail.sujet }}</td>
                <td>{{ mail.message }}</td>
                <td>
                    <a href="{{ path('app_admin_mail_show', {'id': mail.id}) }}">show</a>
                    <a href="{{ path('app_admin_mail_edit', {'id': mail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_mail_new') }}">Create new</a>
{% endblock %}
